datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: define fields and relations
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String
  social    Json
  courses   Course[]
}

// TODO: define fields and relations
model Course {
  id            Int    @id @default(autoincrement())
  name          String
  courseDetails String
  members       User[]
}

model CourseEnrollment {
  createdAt DateTime @default(now())
  role      UserRole

  userId   Int
  courseId Int

  
}

enum UserRole {
  STUDENT
  TEACHER
}

